xlabel('x', 'Position',[25.5 0 1.0001], 'FontSize', 20)
set(gca,'XTickLabel',{'', 'a', '', 'b'},'FontSize', 20)
set(gca,'YTickLabel',{'0','0.5', '1', '', ''},'FontSize', 20)
grid on

Ã–RNEK â€œnormpdf (x, mu, sigma)â€ iÅŸleviyle normal daÄŸÄ±lÄ±mÄ±n
# olasÄ±lÄ±k yoÄŸunluk fonksiyonu
% Normal DaÄŸÄ±lÄ±m olasÄ±lÄ±k yoÄŸunluk fonksiyonu-oyf (pdf)

mu=6;sigma=1.7;
subplot(2,1,1)
x = 0:0.1:12;
Y = normpdf (x, mu, sigma);
plot(x,Y,'k')
subplot(2,1,2)
x = 0:1:12;
Y = normpdf (x, mu, sigma);
bar(x,Y,'k')

Ã–RNEK â€œnormcdf (x, mu, sigma)â€ iÅŸleviyle normal daÄŸÄ±lÄ±mÄ±n birikimli daÄŸÄ±lÄ±m fonksiyonu
% Normal DaÄŸÄ±lÄ±m birikimli daÄŸÄ±lÄ±m fonksiyonu-BDF

mu=6;sigma=1.7;
subplot(1,2,1)
x = 0:0.1:12;
Y = normcdf (x, mu, sigma);
plot(x,Y,'b')
grid on
subplot(1,2,2)
x = 0:1:12;
Y = normcdf (x, mu, sigma);
bar(x,Y,'b')
grid on

